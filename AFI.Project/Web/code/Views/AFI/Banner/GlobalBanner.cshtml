@using Sitecore.Mvc
@using Sitecore
@using Sitecore.Data.Fields
@using Sitecore.Resources.Media
@using Sitecore.Data.Items
@using AFI.Foundation.Helper
@model Sitecore.Mvc.Presentation.RenderingModel


@if (Sitecore.Context.PageMode.IsExperienceEditor || (Model.Item[FeatureTemplate.GlobalBanner.Fields.IsShow] == "1"))
{
    <section class="alerts-banner">
        <div class="container">
            @{ 
                string linkUrl = SitecoreHelper.GetLinkUrl(Model.Item, FeatureTemplate.GlobalBanner.Fields.Link);
                string linkUrlName = SitecoreHelper.GetLinkUrlName(Model.Item, FeatureTemplate.GlobalBanner.Fields.Link);
            }
            <h1 class="alerts-banner__heading">@Html.Sitecore().Field(FeatureTemplate.GlobalBanner.Fields.Text.ToString()) <a href="@linkUrl">@linkUrlName <i class="fa-solid fa-chevron-right"></i></a></h1>
        </div>
    </section>
}
