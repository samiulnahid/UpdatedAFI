@using Sitecore.Mvc
@using Sitecore
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using System.Configuration
@model AFI.Feature.Article.Models.Article


<section class="">

    <div class="container grid__item grid__item--74 grid__item-mr-1 article-content">

        <p class="article__meta">

            @if (!string.IsNullOrEmpty(Model.Date))
            {
                <span class="article__date">
                    @Model.Date
                </span>
            }

            @if (!string.IsNullOrEmpty(Model.Category))
            {
                <span class="article__category"><a href="@Model.CategoryPageURL?article=@Model.LinkUrl">@Model.Category</a></span>
            }

            @if (!string.IsNullOrEmpty(Model.Tags))
            {
                <span class="article__tag">
                    <span> | </span> @Html.Raw(Model.Tags)
                </span>
            }



        </p>
    </div>


</section>

