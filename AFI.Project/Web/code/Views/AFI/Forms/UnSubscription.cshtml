@using Sitecore.Mvc

@model AFI.Foundation.QuoteForm.Areas.AFIWEB.Models.EXMUnSubscription
@{


}
<style>
    .unsubscribed-page {
        text-align: center;
    }
</style>
<link rel="stylesheet" type="text/css" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css">
<main class="main offscreen__darken" role="main" id="main-content">


    <table class="unsubscribed-page">


        <tr>
            <td class="news-section">
                <div id="templateBody" class="bodyContent rounded6">
                    @if (Model != null && Model.Id > 0)
                    {
                        <div id="unsub-reason-success" class="alert">
                            <h2>    @Html.Raw(Model.Status) </h2>
                        </div>
                    }
                    else
                    {
                        <div class="groups">
                            <h2> Are you sure you want to un-subscribe from any future email notifications? </h2>
                            <div>
                                You will no longer receive email marketing from this list.
                            </div>

                            <ul class="unsub-options">
                                <li>
                                    <input type="email" class="form-control" placeholder="Enter email" id="email" />
                                </li>
                                <li>
                                    <input type="submit" class="btn btn-primary" value="Unsubscribe" id="btnSubmit" />
                                </li>
                            </ul>
                        </div>
                    }



                </div>
            </td>
        </tr>

    </table>

</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
<script>
    $(document).ready(function () {
        var req_email = window.location.search.substring(1).split('&')[0].split('=')[1];
        var req_camp = window.location.search.substring(1).split('&')[1].split('=')[1];
        var req_memberid = window.location.search.substring(2).split('&')[2].split('=')[1];
        $("#email").val(req_email);

        $("#btnSubmit").click(function () {
            var email = $("#email").val();
            window.location.href = "/unsubscription?email=" + email + "&campaign=" + req_camp + "&memberid=" + req_memberid;
        });

    });
</script>