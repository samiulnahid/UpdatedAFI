                                   name="@data.fields[6].id"
                                   type="text"
                                   pattern="[0-9]{5}"
                                   maxlength="5"
                                   autocomplete="none"
                                   data-match="zip" />
                        </div>
                    </div>
                </div>

                <!-- Social Security Number,  Date of Birth-->
                <div class="fields-row">
