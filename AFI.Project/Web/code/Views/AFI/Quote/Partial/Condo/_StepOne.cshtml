                        <div class="field__label-wrapper">
                            <label class="field__label" for="@data.fields[9].id">@data.fields[9].label</label>
                        </div>
                        <div class="field__input-wrapper">
                            <select class="field__input required"
                                    id="@data.fields[9].id"
                                    name="@data.fields[9].id"
                                    type="select">
                                <option value="">--</option>
